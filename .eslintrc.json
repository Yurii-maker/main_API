{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "indent": [
      "error",
      4
    ],
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "class-methods-use-this": "off",
    "no-underscore-dangle":"off",
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ],

  // note you must disable the base rule as it can report incorrect errors
  "no-shadow": "off",
  "@typescript-eslint/no-shadow": ["error"]

  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    }
  }
}
